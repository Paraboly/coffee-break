{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "sourceMap": true,
      "experimentalDecorators": true,
      "allowJs": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop":true,
      "lib": ["es2019", "DOM"],
      "skipLibCheck": true
    },
    "types" : ["node"],
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }